@model IEnumerable<BLL.DTOs.BookDTO>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>


<table class="table">
    <thead>
        <tr>
          
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Language)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CoverImageUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AuthorName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
               
                <td>
                    @Html.ActionLink(item.Title, "Details", new { id = item.Id })
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Language)
                </td>
                <td>
                    <img src="~/images/@item.CoverImageUrl" class="rounded" alt="Book Cover Image" width="100" height="150">
                </td>
                <td>
                    @Html.ActionLink(item.AuthorName, "Details", "Author", new { id = item.AuthorId }, null)
                </td>

            </tr>
        }
    </tbody>
</table>
